<% include ./partials/header %>
  <div class="container">
    <div class="lg-list">
      <div class="header<%= (stories.length == 0) ? ' empty' : '' %>">
        <h3>My stories</h3>
        <div class="buttons">
          <a href="/stories/new">Start new</a>
        </div>
        <% if (stories.length == 0) { %>
          <p>You haven't started any stories yet.</p>
        <% } %>
      </div>
      <ul>
        <% stories.forEach(function(story) { %>
          <a href="/stories/<%= story._id %>"><li>
            <h5><%= story.title %></h5>
            <p>Posts: <%= story.words.length %> | Category: <span class="category"><%= story.category %></span></p>
          </li></a>
        <% }); %>
      </ul>
    </div>
  </div>
  <script src="/js/protocol.js" type="text/javascript"></script>
  <script src="/js/favourites.js" type="text/javascript"></script>
<% include ./partials/footer %>
