<% include ./partials/header %>
  <link rel="stylesheet" href="/css/form-page.css">
  <div class="container">
    <h3 class="on-background">Start a new story</h3>
    <form class="eq-margin" onsubmit="submitStory(); return false;">
      <input type="text" id="inputTitle" placeholder="Title" autocomplete="off">
      <input id="inputStart" type="text" placeholder="First 1-15 words" autocomplete="off">
      <select id="select-category">
        <option value="">Select category...</option>
      </select>
      <h4 class="on-background" id="displayError">Error</h4>
      <button type="submit" class="btn btn-light text-primary round">Start story</button>
    </form>
  </div>
  <script src="/js/protocol.js" type="text/javascript"></script>
  <script src="/js/new-story.js" type="text/javascript"></script>
<% include ./partials/footer %>
