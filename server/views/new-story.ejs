<% include ./partials/header %>
  <link rel="stylesheet" href="/css/form-page.css">
  <div class="container">
    <h3 class="on-background">Start a new story</h3>
    <form class="eq-margin" onsubmit="return false;">
      <input type="text" name="title" placeholder="Title" autocomplete="off">
      <input id="input-text" type="text" name="start" placeholder="First 1-15 words" autocomplete="off">
      <select id="select-category" name="category">
        <option value="">Select category...</option>
      </select>
      <button type="submit" class="btn btn-light text-primary round">Start story</button>
    </form>
  </div>
  <script src="/js/protocol.js" type="text/javascript"></script>
  <script src="/js/favourites.js" type="text/javascript"></script>
  <script src="/js/new-story.js" type="text/javascript"></script>
<% include ./partials/footer %>
